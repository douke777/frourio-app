{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:server": "ts-node-dev --respawn -r tsconfig-paths/register index.ts",
    "dev:frourio": "frourio --watch",
    "build": "tsc -p tsconfig.json && cp -R public dist",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "test": "dotenv -e .env.test -- jest",
    "migrate:test": "dotenv -e .env.test -- prisma migrate reset -f"
  },
  "prisma": {
    "seed": "npx ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/static": "^7.0.4",
    "@prisma/client": "^5.8.1",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.25.2",
    "neverthrow": "^6.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@quramy/jest-prisma": "^1.8.0",
    "@quramy/prisma-fabbrica": "^2.1.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "aspida": "^1.14.0",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-neverthrow": "^1.1.4",
    "eslint-plugin-unused-imports": "^3.0.0",
    "frourio": "^1.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^11.0.0",
    "prisma": "^5.8.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
